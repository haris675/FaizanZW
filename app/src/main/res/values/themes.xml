<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FaizanZW" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryVariant">@color/color_primary</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="btnBlueSquare" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/_50sdp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginHorizontal" tools:ignore="NewApi">@dimen/_20sdp</item>
        <item name="android:elevation">@dimen/_5sdp</item>
        <item name="android:paddingVertical" tools:ignore="NewApi">@dimen/_10sdp</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="background">@drawable/card_box_gradient</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/_13sdp</item>
        <item name="android:fontWeight" tools:targetApi="o">400</item>
        <item name="textAllCaps">false</item>
        <item name="android:includeFontPadding">false</item>
        <item name="fontFamily">@font/poppins_regular</item>
        <item name="cornerRadius">@dimen/_10sdp</item>
    </style>

    <style name="btnTextSquare" parent="@style/Widget.MaterialComponents.Button.TextButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/_50sdp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:elevation">@dimen/_5sdp</item>
        <item name="android:paddingVertical" tools:ignore="NewApi">@dimen/_10sdp</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:fontWeight" tools:targetApi="o">400</item>
        <item name="textAllCaps">false</item>
        <item name="android:includeFontPadding">false</item>
        <item name="fontFamily">@font/poppins_regular</item>
    </style>

    <style name="TransparentDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowCloseOnTouchOutside">false</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:colorBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.3</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowSoftInputMode">stateHidden|adjustResize</item>
    </style>

    <style name="TextLabel" parent="TextAppearance.AppCompat">
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHint">@color/color_primary</item>
        <item name="android:textSize">20sp</item>
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorAccent">@color/color_primary</item>
        <item name="colorControlNormal">@color/color_primary</item>
        <item name="colorControlActivated">@color/color_primary</item>
    </style>

    <style name="Loader" parent="Theme.MaterialComponents.Light.Dialog.Alert">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryVariant">@color/color_primary</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/color_primary</item>
        <item name="colorSecondaryVariant">@color/color_primary</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/white</item>
    </style>

    <style name="dialogtheme2" parent="Theme.MaterialComponents.Light.Dialog.Alert">
        <item name="android:colorPrimary">@color/color_primary</item>
        <item name="android:colorPrimaryDark">@color/color_primary</item>
        <item name="android:colorAccent">@color/color_primary</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="buttonBarNeutralButtonStyle">@style/NuteralButtonStyle</item>
        <item name="android:windowMinWidthMajor">98%</item>
        <item name="android:windowMinWidthMinor">98%</item>
    </style>

    <style name="NegativeButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/color_primary</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/color_primary</item>
    </style>

    <style name="NuteralButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/color_primary_2</item>
    </style>

    <style name="dialog_textview" parent="android:Widget.TextView">
        <item name="android:padding">@dimen/_5sdp</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

</resources>