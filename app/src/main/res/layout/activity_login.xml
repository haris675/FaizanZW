<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_180sdp"
            android:layout_gravity="center"
            android:background="@color/color_primary"
            app:layout_scrollFlags="scroll|enterAlways">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imgLogo"
                android:layout_width="@dimen/_150sdp"
                android:layout_height="@dimen/_150sdp"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                app:srcCompat="@drawable/ic_launcher_background" />

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="@dimen/_118sdp"
                android:layout_height="@dimen/_118sdp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="@dimen/_minus40sdp"
                android:layout_marginRight="@dimen/_minus30sdp"
                android:src="@drawable/ellipse_intro_circle" />

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="@dimen/_minus15sdp"
                android:layout_marginBottom="@dimen/_30sdp"
                android:src="@drawable/ellipse_intro_circle" />


        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/_minus15sdp"
            android:scrollbars="none">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/_15sdp"
                android:elevation="0dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="@dimen/_20sdp"
                app:cardElevation="0dp">

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="@dimen/_15sdp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_25sdp"
                        android:fontFamily="@font/poppins_semibold"
                        android:text="@string/signin"
                        android:textColor="@color/color_primary"
                        android:textFontWeight="500"
                        android:textSize="@dimen/_20sdp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_25sdp"
                            android:fontFamily="@font/poppins_regular"
                            android:includeFontPadding="false"
                            android:text="@string/company_code"
                            android:textColor="@color/hint_color"
                            android:textFontWeight="400"
                            android:textSize="@dimen/_12sdp" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/txtChangeCode"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_25sdp"
                            android:fontFamily="@font/poppins_regular"
                            android:includeFontPadding="false"
                            android:text="@string/change"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:textColor="@color/color_primary"
                            android:paddingVertical="@dimen/_5sdp"
                            android:textFontWeight="600"
                            android:textSize="@dimen/_12sdp" />

                    </LinearLayout>




                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/edtCode"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@android:color/transparent"
                        android:fontFamily="@font/poppins_regular"
                        android:includeFontPadding="false"
                        android:inputType="textCapCharacters"
                        android:textAllCaps="true"
                        android:maxLength="10"
                        android:maxLines="1"
                        android:paddingVertical="@dimen/_6sdp"
                        android:singleLine="true"
                        android:text=""
                        android:editable="false"
                        android:focusable="false"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_14sdp"
                        tools:ignore="RtlSymmetry" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.75dp"
                        android:background="@color/color_primary" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:fontFamily="@font/poppins_regular"
                        android:includeFontPadding="false"
                        android:text="@string/user_name"
                        android:textColor="@color/hint_color"
                        android:textFontWeight="400"
                        android:textSize="@dimen/_12sdp" />


                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/edtUserName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@android:color/transparent"
                        android:fontFamily="@font/poppins_regular"
                        android:includeFontPadding="false"
                        android:inputType="textEmailAddress"
                        android:maxLength="90"
                        android:maxLines="1"
                        android:paddingVertical="@dimen/_6sdp"
                        android:singleLine="true"
                        android:text=""
                        android:textColor="@color/black"
                        android:textSize="@dimen/_14sdp"
                        tools:ignore="RtlSymmetry" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.75dp"
                        android:background="@color/color_primary" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:fontFamily="@font/poppins_regular"
                        android:includeFontPadding="false"
                        android:text="@string/password"
                        android:textColor="@color/hint_color"
                        android:textSize="@dimen/_12sdp" />


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <androidx.appcompat.widget.AppCompatEditText
                            android:id="@+id/edtPassword"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toLeftOf="@+id/imgEye"
                            android:backgroundTint="@android:color/transparent"
                            android:fontFamily="@font/poppins_regular"
                            android:includeFontPadding="false"
                            android:inputType="textPassword"
                            android:maxLength="20"
                            android:maxLines="1"
                            android:paddingVertical="@dimen/_6sdp"
                            android:singleLine="true"
                            android:text=""
                            android:textColor="@color/black"
                            android:textSize="@dimen/_14sdp"
                            tools:ignore="RtlSymmetry" />

                        <ImageView
                            android:id="@+id/imgEye"
                            android:layout_width="@dimen/_23sdp"
                            android:layout_height="@dimen/_23sdp"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="@dimen/_15sdp"
                            android:padding="@dimen/_3sdp"
                            android:src="@drawable/ic_eye_off"
                            android:tag="1" />

                    </RelativeLayout>


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.75dp"
                        android:background="@color/color_primary" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/txtForgotPassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:fontFamily="@font/poppins_regular"
                        android:gravity="right"
                        android:paddingVertical="@dimen/_5sdp"
                        android:text="@string/forgot_password"
                        android:textColor="@color/snack_green"
                        android:textFontWeight="400"
                        android:textSize="@dimen/_12sdp"
                        android:transitionName="forgot_title" />


                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnSignIn"
                        style="@style/btnBlueSquare"
                        android:layout_marginHorizontal="0dp"
                        android:layout_marginTop="@dimen/_22sdp"
                        android:layout_marginBottom="@dimen/_30sdp"
                        android:text="@string/signin"
                        app:backgroundTint="@color/color_primary" />


                </androidx.appcompat.widget.LinearLayoutCompat>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </LinearLayout>
</ScrollView>
