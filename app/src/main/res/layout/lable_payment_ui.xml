<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_15sdp"
        android:orientation="horizontal">

        <com.app.faizanzw.customui.CustomLabelUI
            android:id="@+id/txtPaymentNo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginEnd="@dimen/_3sdp"
            android:inputType="text"
            android:maxLines="1"
            app:hint="Payment No"
            app:title="" />

        <com.app.faizanzw.customui.CustomLabelUI
            android:id="@+id/txtDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLength="80"
            android:layout_weight="1"
            android:layout_marginStart="@dimen/_3sdp"
            android:layout_marginEnd="@dimen/_15sdp"
            android:visibility="visible"
            android:maxLines="1"
            app:hint="Date"
            app:title="" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp"
        android:orientation="horizontal">

        <com.app.faizanzw.customui.CustomLabelUI
            android:id="@+id/txtAmount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginEnd="@dimen/_3sdp"
            app:title=""
            android:layout_weight="1"
            app:hint="@string/amount" />

        <com.app.faizanzw.customui.CustomLabelUI
            android:id="@+id/txtCurrency"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_3sdp"
            android:layout_marginEnd="@dimen/_15sdp"
            app:title=""
            android:layout_weight="1"
            app:hint="Currency" />

    </LinearLayout>

    <com.app.faizanzw.customui.CustomLabelUI
        android:id="@+id/txtBranch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp"
        android:inputType="textMultiLine"
        android:layout_marginHorizontal="@dimen/_15sdp"
        android:maxLength="150"
        android:maxLines="3"
        app:hint="Branch"
        app:title="" />

    <com.app.faizanzw.customui.CustomLabelUI
        android:id="@+id/txtSentBy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginHorizontal="@dimen/_15sdp"
        app:title=""
        app:hint="Sent By" />

    <com.app.faizanzw.customui.CustomLabelUI
        android:id="@+id/txtEmployee"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginHorizontal="@dimen/_15sdp"
        app:title=""
        app:hint="Received By" />



    <com.app.faizanzw.customui.CustomLabelUI
        android:id="@+id/txtRemarks"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginHorizontal="@dimen/_15sdp"
        android:layout_marginBottom="@dimen/_15sdp"
        app:title=""
        app:hint="@string/remarks" />


    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnAccept"
        style="@style/btnBlueSquare"
        android:layout_marginHorizontal="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_marginBottom="@dimen/_30sdp"
        android:text="ACCEPT"
        android:visibility="gone"
        app:backgroundTint="@color/color_primary" />


</LinearLayout>

